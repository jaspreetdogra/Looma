{
  "manifest_version": 3,
  "name": "Looma",
  "version": "1.0.0",
  "description": "Smart index for AI conversations with pixel-themed dark UI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://grok.x.ai/*",
        "https://x.ai/*",
        "https://claude.ai/*",
        "https://www.claude.ai/*"
      ],
      "js": [
        "utils/platformDetector.js",
        "utils/colorExtractor.js",
        "core/indexer.js",
        "ui/themeManager.js",
        "content.js"
      ],
      "css": [
        "styles/adaptive.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Looma"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles/adaptive.css",
        "core/indexer.js",
        "utils/platformDetector.js",
        "utils/colorExtractor.js",
        "ui/themeManager.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://bard.google.com/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://grok.x.ai/*",
        "https://x.ai/*",
        "https://claude.ai/*",
        "https://www.claude.ai/*"
      ]
    }
  ]
}
